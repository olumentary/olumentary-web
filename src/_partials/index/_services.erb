<section class="bg-gray-900 py-24 sm:py-32 flex flex-col">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base font-semibold leading-7 text-primary-300">Our services</h2>
      <p class="text-3xl font-bold tracking-tight text-secondary-50 sm:text-4xl">We'll bring your ideas to life</p>
    </div>
    <div class="mx-auto mt-4 max-w-2xl lg:mt-8 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-4 lg:max-w-none lg:grid-cols-3">
        <% for service in site.data.services %>
        <div class="flex flex-col p-6 rounded-lg shadow-md text-primary-300 hover:text-primary-100 hover:bg-primary-900 border border-primary-200 border-opacity-50">
          <dt class="flex items-center gap-x-3 text-xl font-semibold leading-7"><%= service.name %></dt>
          <dd class="mt-2 flex flex-auto flex-col text-base leading-7 text-gray-100">
            <p class="flex-auto"><%= service.description %></p>
          </dd>
        </div>
        <% end %>
      </dl>
    </div>
  </div>
</section>